<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_create_alarm"
    tools:context=".activities.CreateAlarmActivity">

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="27dp"
        android:background="@android:drawable/editbox_background"
        android:drawablePadding="16dp"
        android:gravity="center"
        android:hint="@string/timeButton"
        android:textSize="32sp"
        app:drawableTopCompat="@drawable/ic_time"
        app:layout_constraintBottom_toTopOf="@+id/alarmName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/alarmName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="150sp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/black"
        android:hint="@string/setAlarmName"
        android:inputType="text"
        android:maxLength="35"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/timer" />

    <Button
        android:id="@+id/alarmBack"
        android:layout_width="111dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/ubuntu_bold"
        android:text="@string/alarmBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/alarmSave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/alarmName" />

    <Button
        android:id="@+id/alarmSave"
        android:layout_width="111dp"
        android:layout_height="59dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/ubuntu_bold"
        android:text="@string/alarmSave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/alarmBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/alarmName" />


</androidx.constraintlayout.widget.ConstraintLayout>